cd "/root/code/claude-memory-system"
source .venv/bin/activate

QUERY="$1"
MAX_RESULTS="${2:-3}"
MIN_RELEVANCE="${3:-0.1}"

if [ -z "$QUERY" ]; then
    echo "âŒ ç”¨æ³•: memory-recall \"æœç´¢å…³é”®è¯\" [æœ€å¤§ç»“æœæ•°] [æœ€å°ç›¸å…³æ€§]"
